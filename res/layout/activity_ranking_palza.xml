<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/include_common_head_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ranking_plaza"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_height"
                    android:layout_marginTop="10dp"
                    android:background="#55000000"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/homepage_studentCard_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="邀请同学加入榜单"
                        android:textColor="@android:color/white" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:background="#88ffffff" />

                    <TextView
                        android:id="@+id/homepage_action_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="加入榜单"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/ItemTheme"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:padding="10dp" >

                <TextView
                    style="@style/AppItemTitleTextView"
                    android:lineSpacingMultiplier="1.2"
                    android:text="校园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介校
                园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介校园排行榜简介" />
            </RelativeLayout>

            <TextView style="@style/DividerHorizontalTextTheme" />

            <TextView
                style="@style/DividerHorizontalTextTheme"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/GroupTextTheme" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/plaza_ranking1_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="学霸" />

                    <TextView
                        style="@style/DividerVerticalTextTheme" />

                    <TextView
                        android:id="@+id/plaza_ranking2_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="女神" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"/>

                    <TextView
                        android:id="@+id/plaza_ranking3_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="摄影" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"/>

                    <TextView
                        android:id="@+id/plaza_ranking4_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="帅哥" />
                </LinearLayout>

                <TextView style="@style/DividerHorizontalTextTheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/plaza_ranking1_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="学霸" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"/>

                    <TextView
                        android:id="@+id/plaza_ranking2_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="女神" />

                    <TextView
                        style="@style/DividerVerticalTextTheme" />

                    <TextView
                        android:id="@+id/plaza_ranking3_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="摄影" />

                    <TextView
                        style="@style/DividerVerticalTextTheme" />

                    <TextView
                        android:id="@+id/plaza_ranking4_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="帅哥" />
                </LinearLayout>

                <TextView style="@style/DividerHorizontalTextTheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/plaza_ranking1_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="学霸" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"/>

                    <TextView
                        android:id="@+id/plaza_ranking2_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="女神" />

                    <TextView
                        style="@style/DividerVerticalTextTheme" />

                    <TextView
                        android:id="@+id/plaza_ranking3_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="摄影" />

                    <TextView
                        style="@style/DividerVerticalTextTheme" />

                    <TextView
                        android:id="@+id/plaza_ranking4_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="帅哥" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/DividerHorizontalTextTheme"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>