<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/DividerHorizontalTextTheme"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/GroupTextTheme" >

                <RelativeLayout
                    android:id="@+id/plaza_ranking_layout"
                    style="@style/ItemTheme" >

                    <TextView
                        style="@style/AppItemTitleTextView"
                        android:text="@string/plaza_ranking"
                        android:textColor="@color/app_emerald_green"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/homepage_user_school"
                        style="@style/PlazaItemContentTextView"
                        android:text="寻找校园达人" />

                    <ImageView style="@style/IItemIntoImageView" />
                </RelativeLayout>

                <TextView
                    style="@style/DividerHorizontalTextTheme"
                    android:background="@color/app_emerald_green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/plaza_ranking1_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="学霸" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:id="@+id/plaza_ranking2_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="女神" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:id="@+id/plaza_ranking3_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="摄影" />

                    <TextView
                        style="@style/DividerVerticalTextTheme"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp" />

                    <TextView
                        android:id="@+id/plaza_ranking4_tv"
                        style="@style/ItemGridTextTheme"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_launcher"
                        android:text="帅哥" />
                </LinearLayout>
            </LinearLayout>

            <TextView style="@style/DividerHorizontalTextTheme" />

            <TextView
                style="@style/DividerHorizontalTextTheme"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/GroupTextTheme" >

                <RelativeLayout style="@style/ItemTheme" >

                    <TextView
                        style="@style/AppItemTitleTextView"
                        android:text="互帮互助"
                        android:textColor="@color/app_emerald_green"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    style="@style/DividerHorizontalTextTheme"
                    android:background="@color/app_emerald_green" />

                <RelativeLayout
                    android:id="@+id/plaza_seek_layout"
                    style="@style/ItemTheme" >

                    <TextView
                        style="@style/AppItemTitleTextView"
                        android:text="寻物启事" />

                    <TextView
                        android:id="@+id/homepage_user_school"
                        style="@style/PlazaItemContentTextView"
                        android:text="武汉东湖学院" />

                    <ImageView style="@style/IItemIntoImageView" />
                </RelativeLayout>

                <TextView
                    style="@style/DividerHorizontalTextTheme"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:id="@+id/plaza_return_layout"
                    style="@style/ItemTheme" >

                    <TextView
                        style="@style/AppItemTitleTextView"
                        android:text="失物招领" />

                    <TextView
                        android:id="@+id/homepage_user_school"
                        style="@style/PlazaItemContentTextView"
                        android:text="武汉东湖学院" />

                    <ImageView style="@style/IItemIntoImageView" />
                </RelativeLayout>
            </LinearLayout>

            <TextView style="@style/DividerHorizontalTextTheme" />

            <TextView
                style="@style/DividerHorizontalTextTheme"
                android:layout_marginTop="10dp" />

            <LinearLayout style="@style/GroupTextTheme" >

                <RelativeLayout
                    android:id="@+id/plaza_dynamic_layout"
                    style="@style/ItemTheme" >

                    <TextView
                        style="@style/AppItemTitleTextView"
                        android:text="校园动态" />

                    <TextView
                        android:id="@+id/homepage_user_school"
                        style="@style/PlazaItemContentTextView"
                        android:text="武汉东湖学院" />

                    <ImageView style="@style/IItemIntoImageView" />
                </RelativeLayout>

                <TextView
                    style="@style/DividerHorizontalTextTheme"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:id="@+id/plaza_action_layout"
                    style="@style/ItemTheme" >

                    <TextView
                        style="@style/AppItemTitleTextView"
                        android:text="@string/plaza_Action" />

                    <TextView
                        android:id="@+id/homepage_user_school"
                        style="@style/PlazaItemContentTextView"
                        android:text="武汉东湖学院" />

                    <ImageView style="@style/IItemIntoImageView" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                style="@style/DividerHorizontalTextTheme"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>